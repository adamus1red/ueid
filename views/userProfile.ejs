<% include partial/head.ejs %>
    <% include partial/navbar.ejs %>
    <div class="container">
        <div class="row">
            <div class="col s12">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">User: <%= username.username %></span>
                        <hr />
                        <p><% if(typeof username.description != "undefined") { %>
                            <%= username.description %>
                        <% } else { %> 
                            No description available
                        <% } %></p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">Assigned Prefixes</span>
                        <p>
                        <% for(var i = 0; i < assignedPrefixes.length; i++) { %>
                            <div class="row">
                                <div class="col s4">
                                    <a href="/e/<%= assignedPrefixes[i].type.hex %>/<%= assignedPrefixes[i].hex %>"><%= assignedPrefixes[i].type.hex %>:<%= assignedPrefixes[i].hex %></a>
                                </div>
                                <div class="col s4">
                                    <%= assignedPrefixes[i].name %>
                                </div>
                                <div class="col s4">
                                    <%= assignedPrefixes[i].description %>
                                </div>
                            </div>
                        <% } %>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% include partial/footer.ejs %>
<% include partial/foot.ejs %>
